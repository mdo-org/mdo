#!/usr/bin/env node

const { flow } = require("yargs")
  .option('flow', {
    required: true,
    description: 'name of the npm package to be used as an MDo flow',
    type: 'string',
  })
  .example('echo "\n- [ ] take out trash\n\t@start tomorrow\n" | $0 --flow @mdo-org/mdo-flow-live-in-the-moment')
  .argv;
const run = require('..');

run({ flow });
